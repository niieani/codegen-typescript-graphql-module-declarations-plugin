{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "lib": [
      "DOM",
      "ESNext",
    ],
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true
  },
  "exclude": [
    "dist",
    "dist-cjs",
    "coverage",
    "release.config.js",
    "typedoc.js",
    "docs",
    "docgen"
  ],
}
